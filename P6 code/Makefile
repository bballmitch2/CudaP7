
# Authors: Eric Butler
# DO NOT EDIT THIS FILE

# default to debug
MODE ?= debug

include build/defines.mk

.PHONY: all common frontend backend clean

all: common frontend backend

common:
	$(MAKE) -f build/make.mk MODE=$(MODE) MKFILE=build/common.mk target

frontend: common
	$(MAKE) -f build/make.mk MODE=$(MODE) MKFILE=build/frontend.mk target
	cp $(BIN_DIR)/$(MODE)/frontend .

backend: common
	$(MAKE) -f build/make.mk MODE=$(MODE) MKFILE=build/backend.mk target
	cp $(BIN_DIR)/$(MODE)/backend .

clean:
	rm -rf backend frontend $(OBJ_DIR) $(BIN_DIR)

